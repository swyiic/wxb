{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "网信办支撑工具",
  "version": "0.0.4",
  "identifier": "com.wxb.dev",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "网信办支撑工具",
        "width": 1000,
        "height": 950,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["global-perms"]
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {"resources/": ""},
    "icon": [
      "icons/32x32.svg",
      "icons/128x128.svg",
      "icons/128x128@2x.svg",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "hardenedRuntime": false
    }
  }
}